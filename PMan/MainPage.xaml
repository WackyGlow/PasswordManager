<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMan.MainPage">

    
    

    <Grid>
       

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <BoxView Grid.Row="0" Color="#007ACC" HeightRequest="75"/>

        <!-- Content -->
        <StackLayout Grid.Row="1" Padding="20" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="" FontSize="24" HorizontalOptions="Center"/>
            <Entry x:Name="PasswordEntry" Placeholder="Enter Master Password" IsPassword="True" WidthRequest="200" HorizontalOptions="Center"/>
            <!-- Center the "Login" button horizontally and vertically -->
            <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#007ACC" TextColor="White" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center"/>

        </StackLayout>

        <!-- Footer -->
        <BoxView Grid.Row="2" Color="#007ACC" HeightRequest="75"/>
    </Grid>


</ContentPage>
